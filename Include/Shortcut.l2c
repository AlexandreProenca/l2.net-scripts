CLASS Shortcut null
VAR_START

PUBLIC INT PAGE 0
PUBLIC INT FKEY 0

VAR_END

PUBLIC CLICK 0
	IF THIS.FKEY != 0
		IF PAGE != 0
			DEFINE INT SHORTCUT_ID 0
			DEFINE INT MULTIPLIER 12
			MATH SHORTCUT_ID THIS.PAGE SUBTRACT ONE
			MATH SHORTCUT_ID SHORTCUT_ID MULTIPLY MULTIPLIER
			MATH SHORTCUT_ID SHORTCUT_ID ADD THIS.FKEY
			USE_FKEY SHORTCUT_ID "<&FALSE&>" "<&FALSE&>" 
		ENDIF
	ENDIF
RETURN NULL

END_CLASS