
	INCLUDE Include/EngineX.l2c
	DEFINE_GLOBAL ENGINEX ENGINEX 0

	PRINT_TEXT ""
	PRINT_TEXT "-------------------------------------------------"

	DEFINE VECTOR3 CHAR_POS 0
	DEFINE VECTOR3 TARGET_POS 0

	CHAR_POS.SET VOID 3 #i0 #i0 #i0
	TARGET_POS.SET VOID 3 #i1 #i0 #i0

	DEFINE VECTOR3 DIRECTION 0
	ENGINEX.MATRIX.POINTS_DIRECTION DIRECTION 2 CHAR_POS TARGET_POS
	PRINT_TEXT "> Direction: <&DIRECTION.X&> / <&DIRECTION.Y&> / <&DIRECTION.Z&>"

	DEFINE VECTOR3 ROTATED 0
	DEFINE DOUBLE ANGLERAD 0
	ENGINEX.GEO.DEG2RAD ANGLERAD 1 #i1
	ENGINEX.MATRIX.DIRECTION_ROTATE_Z ROTATED 2 DIRECTION ANGLERAD
	PRINT_TEXT "> Rotated: <&ROTATED.X&> / <&ROTATED.Y&> / <&ROTATED.Z&>"

	PRINT_TEXT "-------------------------------------------------"
	PRINT_TEXT ""

END_SCRIPT
