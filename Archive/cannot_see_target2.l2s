SET_EVENT "<&SCRIPTEVENT_SYSTEMMESSAGE&>" "<&SYSTEM_CURRENTFILE&>" SystemMessages

SLEEP 700000000
PRINT_TEXT "end script"
END_SCRIPT

FUNCTION SystemMessages
DEFINE STRING CANNOTSEE "Cannot see target."
IF MESSAGE == CANNOTSEE
PRINT_TEXT "retarget..."
TARGET_NEAREST
ENDIF
RETURN VOID

