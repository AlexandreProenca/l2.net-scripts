     IF BLESSED_SS_B != 0
          IF CHAR_CUR_MP > BLESSED_SS_B_MP
               ITEM_COUNT C_SPIRITORE "<&ID_SPIRITORE&>"
               ITEM_COUNT C_CRYSTAL_B "<&ID_CRYSTAL_B&>"
