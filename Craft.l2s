                         INJECT "B8 14 00 00 00"
                         SLEEP 300
                    ENDIF
               ENDIF
          ENDIF
     ENDIF
     IF BLESSED_SS_A != 0
          IF CHAR_CUR_MP > BLESSED_SS_A_MP
               ITEM_COUNT C_SPIRITORE "<&ID_SPIRITORE&>"
